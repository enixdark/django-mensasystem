{% extends 'base.html' %}

{% block rightcontent %}

<div id="content" class="span10">
    <div class="row-fluid">

        <div class="span3 statbox purple" onTablet="span6" onDesktop="span3">

            <div class="footer">
                <button type="button" class="btn btn-link" id="btnStart">Start Working</button>
            </div>
        </div>
        <div class="span3 statbox green" onTablet="span6" onDesktop="span3">

            <div class="footer">
                <button type="button" class="btn btn-link" id="btnEnd">End Working</button>
            </div>
        </div>
    </div>

    <div class="table-responsive">

        <table class="table table-striped table-bordered table-hover">
            <thead>
            <tr>
                <th>Date</th>
                <th>Start working time</th>
                <th>End working time</th>
                <th>Fines</th>
            </tr>
            </thead>
            <tbody>

            {% for timesheet in timesheet_list%}
                <tr>
                    <td>{{ timesheet.working_date }}</td>
                    <td>{{ timesheet.check_in }}</td>
                    <td>{{ timesheet.check_out }}</td>
                    <td></td>

                </tr>
            {% endfor %}

            </tbody>
        </table>
    </div>
    <h1>Today: {{timesheet_today}}</h1>

</div>
<form action="" method="POST" id="form">
        <div id="content" class="span10">

        <form action="" method="POST">
            {% csrf_token %}
            <input type="hidden" name="action" value="" id="formAction">
        </form>
    </div>
</form>
{% endblock %}
{% block scripts %}
        <script type="text/javascript">
            $(document).ready(function(){


                $("#btnStart").click(function(){
                    $("formAction").val("start");
                    submitForm();
                });
                $("#btnEnd").click(function(){
                    $("#formAction").val("end");
                    submitForm();
                });

            });

            function submitForm(){
// 			var formData = $("#form").serialize());
// 			$.ajax({
// 				type: 'POST',
// 			    url: $(form).attr('action'),
// 			    data: formData
// 			}).done(function(response){

// 			});
                $("#form").submit();

            }
        </script>
{% endblock %}